---
interface Props {
  title?: string;
  subtitle?: string;
}

const { title = 'Filosofisk Forum', subtitle = 'En frivillig sammenslutning for personer med filosofisk interesse' } = Astro.props;
---

<section class="hero">
  <div class="container hero-content">
    <h1>{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    <div class="hero-actions">
      <slot />
    </div>
  </div>
</section>

<style>
  .hero {
    text-align: center;
    padding: var(--space-lg) 0 var(--space-xl);
    position: relative;
  }

  .hero::after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: linear-gradient(to bottom, var(--color-bg), var(--color-bg-alt));
    pointer-events: none;
  }

  .hero h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-md);
    letter-spacing: 0.02em;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    max-width: 560px;
    margin: 0 auto var(--space-lg);
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    flex-wrap: wrap;
    padding-bottom: var(--space-lg);
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-lg) 0 0;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      padding-bottom: calc(80px + var(--space-md));
    }

    .hero-actions :global(.btn) {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
