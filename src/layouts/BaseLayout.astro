---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Filosofisk Forum er en frivillig forening der afholder filosofiske foredrag i København med fri entré.' } = Astro.props;
const fullTitle = title === 'Forside' ? 'Filosofisk Forum' : `${title} — Filosofisk Forum`;
---

<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="da_DK" />
  <title>{fullTitle}</title>
  <link rel="icon" type="image/png" href="/favicon.png" />
</head>
<body>
  <a href="#main" class="skip-link">Spring til indhold</a>
  <Header />
  <main id="main">
    <slot />
  </main>
  <Footer />
</body>
</html>
